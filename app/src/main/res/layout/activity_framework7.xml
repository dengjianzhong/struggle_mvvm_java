<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_333333"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    tools:context=".view.activity.FrameworkActivity7">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="连接网口打印机" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试打印" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="重置网口打印机" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_8"
        app:contentPaddingLeft="@dimen/dp_20"
        app:contentPaddingTop="@dimen/dp_20">

        <com.struggle.base.widgets.LabelView
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            app:label="有效"
            app:label_color="@color/color_FFFFFF"
            app:label_size="@dimen/sp_11"
            app:right_bottom_radius="@dimen/dp_8"
            app:shape_color="@color/color_FC6A6A" />
    </androidx.cardview.widget.CardView>

    <com.zhong.struggle_mvvm.view.widgets.LuckDrawSurfaceView
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150" />
</LinearLayout>